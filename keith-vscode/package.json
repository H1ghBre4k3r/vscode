{
    "name": "keith-vscode",
    "displayName": "KEITH",
    "description": "KIEL Environment Integrated in Visual Studio Code",
    "version": "0.1.0",
    "publisher": "kieler",
    "author": "Kiel University <rt-kieler-devel@informatik.uni-kiel.de>",
    "icon": "icon.png",
    "license": "EPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://git.rtsys.informatik.uni-kiel.de/projects/KIELER/repos/keith",
        "directory": "keith-vscode"
    },
    "homepage": "https://rtsys.informatik.uni-kiel.de/kieler",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:sctx",
        "onLanguage:elkt",
        "onLanguage:kgt",
        "onLanguage:kviz",
        "onLanguage:strl",
        "onLanguage:lus"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "sctx",
                "configuration": "./language-configs/basic-configuration.json",
                "aliases": [
                    "SCCharts"
                ],
                "extensions": [
                    ".sctx"
                ]
            },
            {
                "id": "elkt",
                "configuration": "./language-configs/basic-configuration.json",
                "aliases": [
                    "Elk Graph"
                ],
                "extensions": [
                    ".elkt"
                ]
            },
            {
                "id": "kgt",
                "configuration": "./language-configs/basic-configuration.json",
                "aliases": [
                    "KGraph"
                ],
                "extensions": [
                    ".kgt"
                ]
            },
            {
                "id": "kviz",
                "configuration": "./language-configs/basic-configuration.json",
                "aliases": [
                    "Kieler Visualization"
                ],
                "extensions": [
                    ".kviz"
                ]
            },
            {
                "id": "strl",
                "configuration": "./language-configs/basic-configuration.json",
                "aliases": [
                    "Estrel"
                ],
                "extensions": [
                    ".strl"
                ]
            },
            {
                "id": "lus",
                "configuration": "./language-configs/basic-configuration.json",
                "aliases": [
                    "Lustre"
                ],
                "extensions": [
                    ".lus"
                ]
            }
        ],
        "grammars": [
            {
                "language": "sctx",
                "scopeName": "source.sctx",
                "path": "./syntaxes/sctx.tmLanguage.json"
            },
            {
                "language": "elkt",
                "scopeName": "source.elkt",
                "path": "./syntaxes/elkt.tmLanguage.json"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == sctx || resourceLangId == elkt || resourceLangId == kgt || resourceLangId == kviz || resourceLangId == strl || resourceLangId == lus",
                    "command": "klighd-vscode.diagram.open",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceLangId == sctx || resourceLangId == elkt || resourceLangId == kgt || resourceLangId == kviz || resourceLangId == strl || resourceLangId == lus",
                    "command": "klighd-vscode.diagram.open",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "when": "resourceLangId == sctx || resourceLangId == elkt || resourceLangId == kgt || resourceLangId == kviz || resourceLangId == strl || resourceLangId == lus",
                    "command": "klighd-vscode.diagram.open",
                    "group": "navigation"
                }
            ]
        },
        "commands": []
    },
    "extensionDependencies": [
        "kieler.klighd-vscode"
    ],
    "scripts": {
        "clean": "rm -rf dist",
        "lint": "eslint .",
        "build": "webpack --mode production --devtool hidden-source-map",
        "watch": "webpack --watch",
        "package": "vsce package --yarn -o keith-vscode.vsix",
        "vscode:prepublish": "yarn run build"
    },
    "devDependencies": {
        "@types/vscode": "^1.56.0",
        "@types/node": "^12.11.7",
        "ts-loader": "^9.2.3",
        "vsce": "1.88.0",
        "webpack": "^5.39.1",
        "webpack-cli": "^4.7.2"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    }
}
