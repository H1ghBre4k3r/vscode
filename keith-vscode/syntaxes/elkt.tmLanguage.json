{
  "name": "Elk Graph",
  "scopeName": "source.elkt",
  "fileTypes": ["elkt"],
  "patterns": [
      {
          "include": "#comments"
      },
      {
          "include": "#constants"
      },
      {
          "include": "#keywords"
      },
      {
          "name": "string.quoted.double.sctx",
          "begin": "\"",
          "end": "\""
      }
  ],
  "repository": {
      "comments": {
          "patterns": [
              {
                  "name": "comment.line.sctx",
                  "begin": "(^[ \\t]+)?(?=//)",
                  "end": "(?=$)"
              },
              {
                  "name": "comment.block.sctx",
                  "begin": "/\\*(\\*)?(?!/)",
                  "end": "\\*/"
              }
          ]
      },
      "constants": {
          "patterns": [
              {
                  "name": "constant.numeric.sctx",
                  "match": "\\b[0-9][0-9]*\\b"
              },
              {
                  "name": "constant.language.sctx",
                  "match": "\\b(true|false|DOWN|UP|LEFT|RIGHT)\\b"
              }
          ]
      },
      "keywords": {
          "patterns": [
              {
                  "name": "keyword.control.sctx",
                  "match": "\\b(node|edge)\\b"
              },
              {
                  "name": "keyword.operator.sctx",
                  "match": "\\-\\>"
              },
              {
                  "name": "keyword.other.sctx",
                  "match": "\\b(layout|label|size)\\b"
              }
          ]
      }
  }
}
