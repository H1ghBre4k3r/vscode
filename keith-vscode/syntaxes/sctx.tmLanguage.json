{
    "name": "SCCharts",
    "scopeName": "source.sctx",
    "fileTypes": ["sctx"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#storages"
        },
        {
            "name": "string.quoted.double.sctx",
            "begin": "\"",
            "end": "\""
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.sctx",
                    "begin": "(^[ \\t]+)?(?=//)",
                    "end": "(?=$)"
                },
                {
                    "name": "comment.block.sctx",
                    "begin": "/\\*(\\*)?(?!/)",
                    "end": "\\*/"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.numeric.sctx",
                    "match": "\\b[0-9][0-9]*\\b"
                },
                {
                    "name": "constant.language.sctx",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.sctx",
                    "match": "\\b(scchart|region|initial|final|state|entry|if|do|entry|go to|abort to|join to)\\b"
                },
                {
                    "name": "keyword.other.sctx",
                    "match": "\\b(import|is|to)\\b"
                }
            ]
        },
        "storages": {
            "patterns": [
                {
                    "name": "storage.type.sctx",
                    "match": "\\b(bool|int|string)\\b"
                },
                {
                    "name": "storage.modifier.sctx",
                    "match": "\\b(input|output)\\b"
                }
            ]
        }
    }
}
