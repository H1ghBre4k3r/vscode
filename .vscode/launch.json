{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch VS Code Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/keith-vscode"],
            "sourceMaps": true,
            "smartStep": true,
            "outFiles": ["${workspaceFolder}/keith-vscode/dist/**/*.js"],
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "Launch VS Code Extension (Socket)",
            "type": "pwa-extensionHost",
            "request": "launch",
            "args": [
				"--enable-proposed-api=ms-vscode.js-debug",
                "--extensionDevelopmentPath=${workspaceFolder}/keith-vscode",
				"--extensionDevelopmentPath=${workspaceFolder}/../klighd-vscode/applications/klighd-vscode"
            ],
            "env": {
                "KEITH_LS_PORT": "5007"
            },
            "sourceMaps": true,
            "smartStep": true,
            "outFiles": [
                "${workspaceFolder}/keith-vscode/dist/**/*.js",
				"${workspaceFolder}/../klighd-vscode/applications/klighd-vscode/dist/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/keith-vscode/**",
				"${workspaceFolder}/../klighd-vscode/applications/klighd-vscode/**",
				"!**/node_modules/**"
            ]
        }
    ]
}
