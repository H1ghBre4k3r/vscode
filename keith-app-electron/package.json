{
    "private": true,
    "name": "@kieler/keith-app-electron",
    "version": "0.1.0",
    "author": "Kiel University <rt-kieler-devel@informatik.uni-kiel.de>",
    "license": "EPL-1.0",
    "theia": {
        "target": "electron",
        "frontend": {
            "config": {
                "applicationName": "Keith Electron App",
                "defaultTheme": "light"
            }
        }
    },
    "dependencies": {
        "@kieler/keith-diagram-options": "0.1.0",
        "@kieler/keith-icons": "0.1.0",
        "@kieler/keith-kicool": "0.1.0",
        "@kieler/keith-simulation": "0.1.0",
        "@theia/application-package": "next",
        "@theia/core": "next",
        "@theia/editor": "next",
        "@theia/editorconfig": "next",
        "@theia/electron": "next",
        "@theia/file-search": "next",
        "@theia/filesystem": "next",
        "@theia/getting-started": "next",
        "@theia/keymaps": "next",
        "@theia/languages": "next",
        "@theia/markers": "next",
        "@theia/messages": "next",
        "@theia/metrics": "next",
        "@theia/monaco": "next",
        "@theia/navigator": "next",
        "@theia/outline-view": "next",
        "@theia/preferences": "next",
        "@theia/preview": "next",
        "@theia/process": "next",
        "@theia/search-in-workspace": "next",
        "@theia/terminal": "next",
        "@theia/userstorage": "next",
        "@theia/variable-resolver": "next",
        "@theia/workspace": "next"
    },
    "devDependencies": {
        "@theia/cli": "next",
        "electron": "^3.1.7",
        "reflect-metadata": "^0.1.13"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn build",
        "clean": "theia clean",
        "build": "theia build --mode development",
        "start": "theia start --root-dir=../workspace --plugins=local-dir:../",
        "socket": "theia start --root-dir=../workspace --plugins=local-dir:../ --LSP_PORT=5008",
        "watch": "theia build --watch --mode development"
    }
}
