{
  "name": "@kieler/keith-simulation",
  "version": "0.1.0",
  "description": "An extension for Theia to add simulation support for KEITH",
  "author": "Kiel University https://rtsys.informatik.uni-kiel.de/kieler",
  "license": "EPL-1.0",
  "keywords": [
    "keith-extension",
    "theia",
    "SCCharts",
    "simulation"
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "lint": "tslint -c ../tslint.json --project ./tsconfig.json",
    "build": "tsc && yarn lint",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@kieler/keith-kicool": "0.1.0",
    "@theia/editor": "next"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "7.1.0",
    "@types/mocha": "^5.2.6",
    "mocha": "^6.0.2",
    "ts-node": "^8.0.3",
    "typescript": "latest"
  },
  "files": [
    "lib",
    "src",
    "build"
  ],
  "theiaExtensions": [
    {
      "frontend": "lib/browser/frontend-extension"
    }
  ]
}
